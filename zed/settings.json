// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "sql": true,
    "docker-compose": true,
    "csv": true,
    "env": true,
    "jetbrains-icons": true,
    "kanagawa-themes": true
  },
  "autosave": "off",
  "base_keymap": "JetBrains",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_line_height": "comfortable",
  "current_line_highlight": "gutter",
  "cursor_shape": "bar",
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": { "file_icons": true, "git_status": true },
  "centered_layout": {
    "left_padding": 0.25,
    "right_padding": 0.25
  },
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "journal": {
    "hour_format": "hour24"
  },
  "soft_wrap": "editor_width",
  "telemetry": {
    "metrics": false
  },
  "assistant": {
    "enabled": false,
    "version": "1"
  },
  "restore_on_startup": "last_workspace",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        }
      }
    }
  },
  "icon_theme": "Zed (Default)",
  "theme": "Catppuccin Macchiato - No Italics",

  "file_types": {
    "Tera (CSS)": ["*.css.tera"],
    "Tera (HTML)": ["*.html.tera"],
    "Tera (JSON)": ["*.json.tera"],
    "Tera (TOML)": ["*.toml.tera"],
    "Tera (YAML)": ["*.yaml.tera"]
  }
}
